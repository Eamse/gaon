# Gaon 프로젝트 환경변수 설정 예시
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값을 입력하세요.

# ============================================
# 필수 환경변수
# ============================================

# JWT 토큰 서명 비밀키 (최소 32자 권장, 랜덤한 문자열 사용)
# 예: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# PostgreSQL 데이터베이스 연결 URL
# 형식: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://username:password@localhost:5432/gaon

# Shadow Database URL (Prisma 마이그레이션용, 선택적)
SHADOW_DATABASE_URL=postgresql://username:password@localhost:5432/gaon_shadow

# Cloudflare R2 계정 ID
R2_ACCOUNT_ID=your-r2-account-id

# Cloudflare R2 액세스 키 ID
R2_ACCESS_KEY_ID=your-r2-access-key-id

# Cloudflare R2 시크릿 액세스 키
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# Cloudflare R2 버킷 이름
R2_BUCKET_NAME=your-bucket-name

# ============================================
# 선택적 환경변수 (기본값이 있음)
# ============================================

# 서버 포트 번호 (기본값: 4000)
PORT=4000

# 실행 환경 (development 또는 production, 기본값: development)
NODE_ENV=development

# 방문자 IP 해싱용 salt (기본값: visit-salt)
VISIT_SALT=your-random-visit-salt

# API 문서 활성화 여부 (true/false, 기본값: true)
ENABLE_API_DOCS=true

# 관리자 정적 파일 Basic 인증 (선택적, 설정하지 않으면 인증 없음)
ADMIN_BASIC_USER=admin
ADMIN_BASIC_PASS=your-admin-password
